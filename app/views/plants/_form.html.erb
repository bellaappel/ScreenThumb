<%= form_with(model: @plant, local: true) do |f| %>
    <%= f.label :name  %>
    <%= f.text_field  :name%>
    <br>
    <%= f.label :species  %>
    <%= f.text_field :species  %>
    <br>
    <%= f.label :toxicity  %>
    <br>
    <%= f.label :toxicity, 'Toxic'%>
    <%= f.radio_button :toxicity, true %>
    <%= f.label :toxicity, 'Nontoxic'%>
    <%= f.radio_button :toxicity, false %>
    <br>
    <%= f.label :sunlight  %>
    <%= f.text_field :sunlight  %>
    <br>

   
    <%= f.label :type %>
    <%= f.collection_select :plant_type_id, @plants, :id, :type %>
  <%= f.submit %>



<% end %>
