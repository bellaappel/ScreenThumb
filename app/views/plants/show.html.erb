<h1><%= @plant.name %></h1>
<p id="notice"><%= notice %></p>
<div class='content-wrapper'> 
<% if @plant.img.attached? %>
    <%= image_tag(@plant.img) %>
   <%end%> 
<h3>Species:</h3>
<%=@plant.species%>
<br>
<h3>Sunlight Needed:</h3>
<%=@plant.sunlight%>
<br>
<h3>Toxicity:</h3>
<%=@plant.toxicity %>
<br>
<h3> Thirst: </h3>
<%= @plant.water %>
<h3> How to Propogate: </h3>
<%= @plant.propogation %>
<br>



<h2>Comments:</h2>
<% @plant.comments.each do |comment| %>
<li><%=link_to comment.title, plant_comments_path(@plant.id, comment.id) %></li>
<% end %>
<br>
<%= link_to 'Add Comment', new_comment_path(:id => @plant.id)  %>
<%= link_to 'Edit Plant', edit_plant_path(:id => @plant.id) %>


